# Production Environment Configuration for TRIXTECH Frontend
# Copy this file to .env.local and update with your production values

# Next.js Configuration
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_SOCKET_URL=https://api.yourdomain.com
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# Environment
NODE_ENV=production

# Analytics (Optional)
NEXT_PUBLIC_GA_TRACKING_ID=your-google-analytics-id
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-here

# Social Media (Optional)
NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id

# Payment Configuration
NEXT_PUBLIC_GCASH_MERCHANT_NAME=TRIXTECH
NEXT_PUBLIC_GCASH_SUPPORTED=true

# Feature Flags
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=false

# CDN Configuration (Optional)
NEXT_PUBLIC_CDN_URL=https://cdn.yourdomain.com

# Security
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key