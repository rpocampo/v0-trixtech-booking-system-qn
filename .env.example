# Database Configuration
MONGODB_URI=mongodb://localhost:27017/trixtech

# MongoDB Connection Pool Settings
MONGO_POOL_SIZE=50
MONGO_REPLICA_SET=rs0

# JWT Configuration
JWT_SECRET=your-32-character-secret-key-here

# Email Configuration (Required for OTP functionality)
# Gmail SMTP (recommended)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
SENDER_EMAIL=noreply@trixtech.com

# Alternative Email Providers:
# Outlook/Hotmail
# EMAIL_HOST=smtp-mail.outlook.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@outlook.com
# EMAIL_PASSWORD=your-app-password

# Yahoo Mail
# EMAIL_HOST=smtp.mail.yahoo.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@yahoo.com
# EMAIL_PASSWORD=your-app-password

# Custom SMTP
# EMAIL_HOST=your-smtp-server.com
# EMAIL_PORT=587
# EMAIL_USER=your-smtp-username
# EMAIL_PASSWORD=your-smtp-password

# Frontend URL
FRONTEND_URL=http://localhost:3000

# QR Payment Configuration
# Static GCash QR code for payments (optional - if not set, dynamic QR codes will be generated)
GCASH_QR_CODE=00020101021127830012com.p2pqrpay0111GXCHPHM2XXX02089996440303152170200000006560417DWQM4TK3JDO83CHRX5204601653036085802PH5908MI**I M.6008Caloocan6104123463045192

# Server Configuration
PORT=5000
NODE_ENV=development

# Redis Configuration (Optional - for caching and distributed locking)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Real-time Data Synchronization
# Polling interval for real-time updates (in milliseconds)
REALTIME_POLL_INTERVAL_MS=8000
# Debounce delay for rapid updates (in milliseconds)
REALTIME_DEBOUNCE_DELAY=1000
# Sync data cache TTL in Redis (in seconds)
SYNC_CACHE_TTL=86400
# Enable verbose logging for real-time operations
REALTIME_LOG_VERBOSE=false

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration for Stable Connections
# Backend WebSocket settings
WS_PING_TIMEOUT=60000
WS_PING_INTERVAL=25000
WS_CONNECT_TIMEOUT=20000
WS_RECONNECTION_ATTEMPTS=10
WS_RECONNECTION_DELAY=1000
WS_RECONNECTION_DELAY_MAX=5000
WS_MAX_IDLE_TIME=300000
WS_WATCHDOG_INTERVAL=60000

# Frontend WebSocket settings (for client-side configuration)
NEXT_PUBLIC_BACKEND_URL=http://localhost:5000
NEXT_PUBLIC_WS_RECONNECTION_ATTEMPTS=10
NEXT_PUBLIC_WS_RECONNECTION_DELAY=1000
NEXT_PUBLIC_WS_RECONNECTION_DELAY_MAX=5000
NEXT_PUBLIC_WS_TIMEOUT=20000
NEXT_PUBLIC_WS_PING_INTERVAL=25000
NEXT_PUBLIC_WS_PING_TIMEOUT=60000

# Database Connection Stability Settings
DB_MAX_POOL_SIZE=50
DB_MIN_POOL_SIZE=10
DB_MAX_IDLE_TIME=30000
DB_SOCKET_TIMEOUT=30000
DB_CONNECT_TIMEOUT=15000
DB_SERVER_SELECTION_TIMEOUT=15000
DB_HEARTBEAT_FREQUENCY=5000