GRAFANA_URL=http://localhost:3001
ALERTMANAGER_URL=http://localhost:9093

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=your-grafana-admin-password

# Backup Configuration
BACKUP_DIR=/backups
REPORT_DIR=/reports
LOG_FILE=/var/log/trixtech/backup.log
MAX_BACKUP_AGE_HOURS=25
MIN_BACKUP_COUNT=3
MAX_STORAGE_PERCENT=85

# Monitoring Thresholds
MONITORING_ERROR_RATE_THRESHOLD=5
MONITORING_MEMORY_THRESHOLD=85
MONITORING_CPU_THRESHOLD=85
MONITORING_DISK_THRESHOLD=85
MONITORING_RESPONSE_TIME_THRESHOLD=5

# Environment Identification
ENVIRONMENT=development
SERVICE_NAME=trixtech-backend
SERVICE_VERSION=1.0.0