# Production Environment Configuration for TRIXTECH Backend
# Copy this file to .env and update with your production values

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/trixtech_prod?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secure-32-character-jwt-secret-here-change-in-production

# Server Configuration
PORT=5000
NODE_ENV=production

# Email Configuration (Required for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
SENDER_EMAIL=noreply@trixtech.com
ADMIN_EMAIL=admin@trixtech.com

# Twilio SMS Configuration (Optional)
TWILIO_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# GCash QR Code Configuration
GCASH_QR_CODE=00020101021127830012com.p2pqrpay0111GXCHPHM2XXX02089996440303152170200000006560417DWQM4TK3JDO83CHRX5204601653036085802PH5908MI**I M.6008Caloocan6104123463045192

# Frontend URL (for CORS and QR callbacks)
FRONTEND_URL=https://yourdomain.com

# File Upload Configuration
UPLOAD_PATH=/var/www/uploads
MAX_FILE_SIZE=5242880

# Security Configuration
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=7d

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn-here
LOG_LEVEL=info

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100